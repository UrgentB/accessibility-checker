{
	"manifest_version": 3,
	"name": "AccessiScan",
	"version": "1.0.0",
	"description": "Сканирует текущую страницу на нарушения доступности и формирует отчёт.",
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png"
		},
		"default_popup": "index.html",
		"default_title": "Провести аудит страницы на доступность"
	},
	"permissions": ["scripting", "tabs", "activeTab"],
	"host_permissions": ["<all_urls>"]
}
