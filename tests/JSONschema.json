{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AnalisatorOutput",
  "type": "object",
  "properties": {
    "result": {
      "type": "object",
      "properties": {
        "url": {"type": "string"},
        "generalResult": {
          "type": "object",
          "properties": {
            "totalChecks": { "type": "integer", "minimum": 0 },
            "successfulChecks": { "type": "integer", "minimum": 0 },
            "failChecks": { "type": "integer", "minimum": 0 }
          },
          "required": ["totalChecks", "successfulChecks", "failChecks"]
        },

        "failsDescription": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "idElement": { "type": "string" },
              "pathElement": { "type": "string" },
              "occuredErrors": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "idError": { "type": "string" },
                    "descriptionError": { "type": "string" },
                    "WCAGrequirement": { "type": "string" }
                  },
                  "required": ["idError", "descriptionError", "WCAGrequirement"]
                }
              }
            },
            "required": ["pathElement", "occuredErrors"]
          }
        }
      },
      "required": ["url","generalResult"]
    }
  },
  "required": ["result"]
}
